<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="madscientist.labs.rocktheuniverse.MainActivity"
    android:orientation="vertical"
    android:paddingTop="?attr/actionBarSize"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saturday Night"
                android:textColor="@color/colorAccent"
                android:paddingTop="40px"
                android:layout_gravity="center"
                android:fontFamily="Roboto-Medium"
                android:textSize="20pt"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•6:00-7:15"
                android:textColor="#000"
                android:textSize="12pt"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:onClick="bandPage"
                android:tag="andy"
                android:text="Andy Mineo 6:00 @ Music Plaza"
                android:padding="10px"
                android:layout_marginBottom="30px"
                android:drawableRight="@mipmap/ic_chevron_right_black_24dp"
                android:background="@color/colorAccent"
                android:textSize="9pt"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:text="I Am They 7:00 @ Hollywood"
                android:onClick="bandPage"
                android:tag="they"
                android:padding="10px"
                android:layout_marginBottom="30px"
                android:drawableRight="@mipmap/ic_chevron_right_black_24dp"
                android:background="@color/colorAccent"
                android:textSize="9pt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•7:15-8:30"
                android:textColor="#000"
                android:textSize="12pt"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:onClick="bandPage"
                android:tag="family"
                android:text="Family Force 5 7:30 @ Music Plaza"
                android:layout_marginBottom="30px"
                android:padding="10px"
                android:drawableRight="@mipmap/ic_chevron_right_black_24dp"
                android:background="@color/colorAccent"
                android:textSize="9pt"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:text="NF 8:30 @ Hollywood"
                android:onClick="bandPage"
                android:tag="nf"
                android:layout_marginBottom="30px"
                android:padding="10px"
                android:drawableRight="@mipmap/ic_chevron_right_black_24dp"
                android:background="@color/colorAccent"
                android:textSize="9pt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•8:30-10:15"
                android:textColor="#000"
                android:textSize="12pt"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:text="Toby Mac 9:15 @ Music Plaza"
                android:onClick="bandPage"
                android:tag="tobymac"
                android:layout_marginBottom="30px"
                android:padding="10px"
                android:drawableRight="@mipmap/ic_chevron_right_black_24dp"
                android:background="@color/colorAccent"
                android:textSize="9pt"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="bandPage"
                android:tag="colton"
                android:textAlignment="viewStart"
                android:text="Colton Dixon 10:15 @ Hollywood"
                android:padding="10px"
                android:layout_marginBottom="30px"
                android:drawableRight="@mipmap/ic_chevron_right_black_24dp"
                android:background="@color/colorAccent"
                android:textSize="9pt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•10:15-11:00"
                android:textColor="#000"
                android:textSize="12pt"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:text="Lecrae 10:45 @ Music Plaza"
                android:onClick="bandPage"
                android:tag="lecrae"
                android:layout_marginBottom="30px"
                android:padding="10px"
                android:drawableRight="@mipmap/ic_chevron_right_black_24dp"
                android:background="@color/colorAccent"
                android:textSize="9pt"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
